@model ElectronicsShop.DAL.ViewModels.ForgotPasswordModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
@{
 
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ForgetPassword</title>
    <style>
        .header {
            height: auto;
            background-image: none;
        }

        .container-search-box {
            display: none;
        }

        .intro-page {
            background-position: center;
            background-size: cover;
            min-height: 100vh;
            width: 100%;
            position: relative;
        }

        .ForgetPassword {
            border: 2px solid green;
            margin-top: 220px;
            margin-left:20%;
            padding: 20px;
            /*background-color:white;*/
        }
    </style>

</head>
<body>
    <div class="intro-page" style="background-image: url(&quot;http://www.zoorme.com/public/front/images/intro-page/intro_bg.svg&quot;);">
        <div class="container-fluid">
            <div class="container">
                @*<h1>ForgetPassword Form</h1>*@
                <div class="row">
                    <div class="col-md-8 ForgetPassword">
                        <h2><span>@_localizer["Forget Your Password?"]</span></h2>
                        <form action="ForgetPassword" method="post" class="form-box">
                            <div class="form-group">
                                <label>@_localizer["Email"]:</label>
                                <input type="text" id="name" asp-for="Email" class="form-control" placeholder="@_localizer["Enter Email"]" required />
                            </div>


                            <div class="form-group">
                                <button type="submit" class="btn btn-md btn-info">@_localizer["Send"]</button>
                                <span id="Required" style="color:#ff0000;"></span>
                            </div>
                            @if (@ViewBag.Result != null)
                            {
                                    <h5 style="color:red;">@ViewBag.Result</h5>
         
                            }

                        </form>
                     

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
